{
  "extends": ["stylelint-config-standard", "stylelint-config-prettier"],
  "plugins": ["stylelint-order"],
  "ignoreFiles": ["**/*.ts", "**/*.tsx", "**/*.json"],
  "rules": {
    "order/order": [
      [
        "dollar-variables",
        "custom-properties",
        "at-rules",
        "less-mixins",
        "declarations",
        {
          "type": "at-rule",
          "name": "supports"
        },
        {
          "type": "at-rule",
          "name": "media"
        },
        "rules"
      ],
      { "severity": "warning" }
    ]
  }
}
